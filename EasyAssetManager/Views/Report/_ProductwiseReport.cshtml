@model IEnumerable<EasyAssetManagerCore.Models.EntityModel.ProductWiseReport>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover  table-responsive" id="tb-productwiseReport" width="100%">
        <thead>
            <tr>
                <th rowspan="3">Name of the products</th>
                <th rowspan="3">Product Code</th>
                <th colspan="4" class="text-center">Disbursement</th>
                <th colspan="3" class="text-center">O/S-as of reporting date</th>
                <th colspan="4" class="text-center">CL as of last Qtr.</th>
                <th colspan="2" class="text-center">Revenue-YTD</th>
                <th colspan="3" class="text-center">Net WO as of last qtr.</th>
            </tr>
            <tr>
                <th colspan="2" class="text-center">In Last Yr.-<span id="headerpreviousYear1"></span></th>
                <th colspan="2" class="text-center">Disbursement -YTD</th>
                <th rowspan="2"># of A/C</th>
                <th rowspan="2">Amount</th>
                <th rowspan="2">% with total O/S</th>
                <th rowspan="2"># of A/C</th>
                <th rowspan="2">Amount</th>
                <th rowspan="2" class="text-center">% with O/S</th>
                <th rowspan="2" class="text-center">% with Total CL</th>
                <th rowspan="2">Amount</th>
                <th rowspan="2" class="text-center">% with Total Revenue</th>
                <th rowspan="2"># of A/C</th>
                <th rowspan="2">Amount</th>
                <th rowspan="2">% with Total W/O</th>
            </tr>
            <tr>
                <th># of A/C</th>
                <th>Amount</th>
                <th># of A/C</th>
                <th>Amount</th>

            </tr>
        </thead>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.product_name</td>
                <td>@v.product_code</td>
                <td>@v.dislastyear_account</td>
                <td>@v.dislastyear_amount</td>
                <td>@v.discurrentyear_account</td>
                <td>@v.discurrentyear_amount</td>
                <td>@v.osaccount</td>
                <td>@v.osamount</td>
                <td>@v.ostotal</td>
                <td>@v.claccount</td>
                <td>@v.clamount</td>
                <td>@v.clpercentage_withos</td>
                <td>@v.cltotal</td>
                <td>@v.revenue_amount</td>
                <td>@v.revenue_total</td>
                <td>@v.woaccount</td>
                <td>@v.woamount</td>
                <td>@v.wototal</td>

            </tr>
        }
    </table>

}
else
{
    <p>No record found.</p>
}

<script type="text/javascript">
    $(document).ready(function () {

        var rowArray = [];
        var colArray = [];
        var title = "";
        rowArray.push([3, 7, 2]);
        rowArray.push([7, 10, 2]);
        rowArray.push([10, 14, 2]);
        rowArray.push([14, 16, 2]);
        rowArray.push([16, 19, 2]);
        rowArray.push([3, 5, 3]);
        rowArray.push([5, 7, 3]);

        colArray.push([2, 4, 1]);
        colArray.push([2, 4, 2]);
        colArray.push([3, 4, 7]);
        colArray.push([3, 4, 8]);
        colArray.push([3, 4, 9]);
        colArray.push([3, 4, 10]);
        colArray.push([3, 4, 11]);
        colArray.push([3, 4, 12]);
        colArray.push([3, 4, 13]);
        colArray.push([3, 4, 14]);
        colArray.push([3, 4, 15]);
        colArray.push([3, 4, 16]);
        colArray.push([3, 4, 17]);
        colArray.push([3, 4, 18]);

        title = ApplicationCommon.reportTitleAndHeaderCustomize();
        ApplicationCommon.makePagination('tb-productwiseReport', 3, rowArray, colArray, title);
        var rowCount = $('#tb-productwiseReport >tbody >tr').length;
        if (rowCount > 0) {
            $("#sidebarCollapse").addClass('fa-chevron-down').removeClass('fa-chevron-up');
            $("#divsidebarCollapse").addClass('border-bottom');
            $('#sidebarContent').css('display', 'none');
        }

        $("#trBranchPop").hide();
    });

</script>


