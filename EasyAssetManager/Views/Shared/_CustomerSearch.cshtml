@model IEnumerable<EasyAssetManagerCore.Models.EntityModel.Customer>
@{
    Layout = null;
}
    <div class="table-responsive">
        @if (Model != null && Model.Any())
        {
            <table class="table datatable-basic table-bordered table-striped table-hover" id="tb-Customer">
                <thead>
                    <tr>
                        <th>Customer CIF</th>
                        <th>Customer Name</th>
                        <th>Gender</th>
                        <th>Father Name</th>
                        <th> Action </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in Model)
                    {
                        <tr>
                            <td>@v.customer_no</td>
                            <td>@v.customer_name</td>
                            <td>@v.sex </td>
                            <td>@v.father_name</td>
                            <td>
                                <button type="button" class="btn btn-success" onclick="select('@v.customer_no','@v.customer_account_no');" data-id="@v.customer_no">
                                    <i class="fa fa-send"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>
                No customer found. Please try again.
            </div>
        }

    </div>
<script type="text/javascript">
    $(document).ready(function ()
    {
       // ApplicationCommon.makePagination("tb-Customer");
    });
    function select(customerNo, accountNo)
    {
        var methodName = $('#txtMethodName').val();
        var controlId = $('#txtControlId').val();
        var classMethod = methodName.split(".");
        $('#' + controlId).val(customerNo);
        window[classMethod[0]][classMethod[1]](customerNo);
        $('#modal_customer_Serch').modal('hide');

        $('#ModalAccountNo').val('');
        $('#customer_Serach').empty();
    }
</script>
