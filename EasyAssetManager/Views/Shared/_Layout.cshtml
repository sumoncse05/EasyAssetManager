</html>


<script type="text/javascript">
    $(document).ready(function ()
    {
        menuCheckActive();
        $('.menuAction').click(function ()
        {
            localStorage.setItem("screenId", $(this).attr('id'));
            localStorage.setItem("firstParentId", $(this).parents().attr('id'));
            localStorage.setItem("rootParentId", $(this).parents().parents().attr('id'));

        })

        function menuCheckActive()
        {
            if (localStorage.getItem("screenId") != null)
                $('#' + localStorage.getItem("screenId")).addClass('active');
            if (localStorage.getItem("firstParentId") != null)
                $('#' + localStorage.getItem("firstParentId")).addClass('in');
            if (localStorage.getItem("rootParentId") != null)
                $('#' + localStorage.getItem("rootParentId")).addClass('active');
        }
    });
</script>
