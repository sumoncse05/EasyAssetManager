    <style>
        span.required {
            color: red !important;
        }

        .wizard > .steps > ul > li {
            width: 16% !important;
        }

        .table > thead > tr > th.removeSorting.sorting:after, .dataTables-example > thead > tr > th.removeSorting.sorting_asc:after, .dataTables-example > thead > tr > th.removeSorting.sorting_desc::after {
            content: none;
        }

        .table > thead > tr > th {
            white-space: nowrap !important;
        }

        .table > tbody > tr > td {
            white-space: nowrap !important;
        }

        .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
            border-top: 1px solid #e7eaec;
            line-height: 0.6;
            padding: 8px;
            vertical-align: top;
        }

        .gridButton {
            padding: .03rem .5rem !important;
            line-height: 0.6 !important;
        }

        .vertical-line {
            width: 0px; /* Use only border style */
            height: 100%;
            float: left;
            border: solid 1px #E5E6E7; /* This is default border style for <hr> tag */
        }

        .vertical-line-border {
            margin-left: 5px;
            margin-right: 5px
        }

        .buttons-excel:hover {
            cursor: pointer !important;
        }
    </style>
</head>
