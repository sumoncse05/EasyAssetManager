@model IEnumerable<EasyAssetManagerCore.Models.EntityModel.AgentOutlet>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover dataTables-example table-responsive" id="tb-agentOutletAuthorize" width="100%">
        <thead>
            <tr>
                <th>Agent ID</th>
                <th>Agent Name</th>
                <th>Outlet Name</th>
                <th>Outlet Branch</th>
                <th>Outlet Account</th>
                <th>Division</th>
                <th>District</th>
                <th>Thana</th>
                <th>Address</th>
                <th>Contact Person</th>
                <th>Contact mobile</th>
                <th>Ins By</th>
                <th>Ins Date</th>
                <th>Authorize</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.AGENT_USR_ID</td>
                    <td>@v.AGENT_NAME</td>
                    <td>@v.OUTLET_NAME</td>
                    <td>@v.BRANCH_CODE</td>
                    <td>@v.CUST_AC_NO</td>
                    <td>@v.DIV_NAME</td>
                    <td>@v.DIST_NAME</td>
                    <td>@v.THANA_NAME</td>
                    <td>@v.ADDRESS</td>
                    <td>@v.CONTACT_NAME</td>
                    <td>@v.CONTACT_MOBILE</td>
                    <td>@v.INS_BY</td>
                    <td>@v.INS_DATE</td>
                    <td>
                        @if (string.IsNullOrEmpty(v.AUTH_DATE))
                        {

                            <a href="/Agent/AgentOutletSetup?agent_id=@v.AGENT_ID&&outlet_id=@v.OUTLET_ID" class="btn btn-success gridButton" data-id="@v.AGENT_ID"> <i class="fa fa-edit"></i></a>

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No record found.</p>
}


<script type="text/javascript">
    $(document).ready(function () {
        ApplicationCommon.makePagination('tb-agentOutletAuthorize');

        var rowCount = $('#tb-agentOutletAuthorize >tbody >tr').length;
        if (rowCount > 0) {
            $("#sidebarCollapse").addClass('fa-chevron-down').removeClass('fa-chevron-up');
            $("#divsidebarCollapse").addClass('border-bottom');
            $('#sidebarContent').css('display', 'none');
        }
    });

</script>