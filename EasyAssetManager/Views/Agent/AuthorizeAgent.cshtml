@{
    ViewData["Title"] = "Authorize Agent";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox " id="iboxTbl">
                <div class="ibox-title">
                    <h5>Authorize Agent</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up" id="iboxTblImg"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" id="iboxContent">
                    <div id="div_authorizeAgent">

                    </div>
                    <div class="form-group hr-line-dashed"> </div>
                    <div style="text-align:left" id="page1">
                        <button type="button" class="btn btn-default" id="btnRefresh">Refresh</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        var classAuthorizeAgent = function () {
            var init = function () {
                eventInitializer();
            };
            var eventInitializer = function () {
                $('#btnRefresh').click(refresh);
                searchInitiate();
            };
            var searchInitiate = function () {
                $('#div_authorizeAgent').empty();
                var url = '/Agent/AuthorizeAgentList';
                $('#div_authorizeAgent').load(url);
            };

            var refresh = function () {
                searchInitiate();
            };

        var view= function(agentId,agentUserId,agentName) {
         window.open("/Agent/AuthorizeAgentPreview?agentId=" + agentId, '_blank');
        };
            return { init: init,view:view};
        }();

        classAuthorizeAgent.init();

    </script>
}




