@model IEnumerable<EasyAssetManagerCore.Models.EntityModel.Agent>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover dataTables-example table-responsive" id="tb-agentlist" width="100%">
        <thead>
            <tr>
                <th>Agent ID</th>
                <th>Agent Name</th>
                <th>Customer No</th>
                <th>Phone No</th>
                <th>Mobile No</th>
                <th>Email</th>
                <th>Address</th>
                <th>Ins By</th>
                <th>Ins Date</th>
                <th>Manage Account</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.AGENT_USR_ID</td>
                    <td>@v.AGENT_NAME</td>
                    <td>@v.CUSTOMER_NO</td>
                    <td>@v.PHONE</td>
                    <td>@v.MOBILE</td>
                    <td>@v.EMAIL</td>
                    <td>@v.ADDRESS</td>
                    <td>@v.INS_BY</td>
                    <td>@v.INS_DATE</td>
                    <td>
                        <a href="/Agent/AgentAccountSetup?agentId=@v.AGENT_ID" class="btn btn-success gridButton" data-id="@v.AGENT_ID"> <i class="fa fa-save"></i></a>

                    </td>
                    <td>
                        @if (string.IsNullOrEmpty(v.AUTH_DATE))
                        {

                            <a href="/Agent/Index?agentId=@v.AGENT_ID" class="btn btn-success gridButton" data-id="@v.AGENT_ID"> <i class="fa fa-edit"></i></a>

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No record found.</p>
}

<script type="text/javascript">
    $(document).ready(function () {
        ApplicationCommon.makePagination('tb-agentlist');

        var rowCount = $('#tb-agentlist >tbody >tr').length;
        if (rowCount > 0) {
            $("#sidebarCollapse").addClass('fa-chevron-down').removeClass('fa-chevron-up');
            $("#divsidebarCollapse").addClass('border-bottom');
            $('#sidebarContent').css('display', 'none');
        }
    });

</script>