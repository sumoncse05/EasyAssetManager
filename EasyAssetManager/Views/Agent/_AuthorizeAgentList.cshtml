@model IEnumerable<EasyAssetManagerCore.Models.EntityModel.Agent>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover dataTables-example table-responsive" id="tb-agentAuthorize" width="100%">
        <thead>
            <tr>
                <th>Agent ID</th>
                <th>Agent Name</th>
                <th>Agent CIF</th>
                <th>Phone</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Trade License</th>
                <th>Address</th>
                <th>Ins By</th>
                <th>Ins Date</th>
                <th>Authorize</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.AGENT_USR_ID</td>
                    <td>@v.AGENT_NAME</td>
                    <td>@v.CUSTOMER_NO</td>
                    <td>@v.PHONE</td>
                    <td>@v.MOBILE</td>
                    <td>@v.EMAIL</td>
                    <td>@v.TRADE_LIC</td>
                    <td>@v.ADDRESS</td>
                    <td>@v.INS_BY</td>
                    <td>@v.INS_DATE</td>
                    @if (string.IsNullOrEmpty(v.AUTH_DATE))
                    {
                        <td>
                            <button type="button" class="btn btn-success gridButton" onclick="classAuthorizeAgent.view('@v.AGENT_ID','@v.AGENT_USR_ID','@v.AGENT_NAME');" data-id="@v.AGENT_ID">
                                <i class="fa fa-check"></i>
                            </button>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No record found.</p>
}


<script type="text/javascript">
      $(document).ready(function () {
       ApplicationCommon.makePagination('tb-agentAuthorize');
    });

</script>