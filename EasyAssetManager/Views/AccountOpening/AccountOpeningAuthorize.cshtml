
@{
    ViewData["Title"] = "Account Opening Authorize";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">

            <div class="ibox" id="divsidebarCollapse">
                <div class="ibox-title">
                    <h5>Search Parameters</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up" id="sidebarCollapse"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" id="sidebarCollapse2">
                    <form id="stepProcess" action="#" class="wizard-big">
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group row">
                                        <div class="col-xl-2">
                                            <label class="col-form-label">Branch:</label>
                                        </div>
                                        <div class="col-xl-3">
                                            <select id="branchId" name="branchId" class="form-control form-element"></select>
                                        </div>
                                        <div class="col-xl-2">
                                            <label class="col-form-label">Request ID:</label>
                                        </div>
                                        <div class="col-xl-3">
                                            <input type="text" id="requestId" name="requestId" class="form-control form-element" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-xl-5"></div>
                                        <div class="col-xl-2">
                                            <button type="button" class="btn btn-primary" id="search">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Existing Account Opening Request</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div id="div_accountOpenAuth"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">


        var classAccountAuthorize = function () {
            var init = function () {
                eventInitializer();
            };
            var eventInitializer = function () {
                $('#search').click(searchInitiate);
                combo.getUserBarnchList('branchId', '/Common/GetUserBarnchListCombo', true);
                searchInitiate();
            };
            var searchInitiate = function () {

                var branchId = $('#branchId').val();
                var requestId = $('#requestId').val();
                $('#div_accountOpenAuth').empty();
                var url = '/AccountOpening/GetAccountOpeningAuthorize';
                $('#div_accountOpenAuth').load(url + '?branchId=' + branchId + '&&requestId=' + requestId);

            };
            return { init: init};
        }();

        classAccountAuthorize.init();

    </script>
}


