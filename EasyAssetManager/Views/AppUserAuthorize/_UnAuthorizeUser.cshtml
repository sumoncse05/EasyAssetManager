@model IEnumerable<EasyAssetManagerCore.Models.EntityModel.User>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover dataTables-example table-responsive" id="tb-accuserauth">
        <thead>
            <tr>
                @*<th><input name="select_all" value="1" id="select-all" type="checkbox" /></th>*@
                <th class="removeSorting"><input type="checkbox" id="UserChkAll" name="UserChkAll" /></th>
                <th>User Type</th>
                <th>User ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Emp ID</th>
                <th>Branch</th>
                <th>Department</th>
                <th>Agent ID</th>
                <th>Agent Name</th>
                <th>Created By</th>
                <th>Created Date</th>
                <th>Updated By</th>
                <th>Updated Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
            <tr>
                @*<td><input name="select" value="@v.USER_ID" id="select+@v.USER_ID" class="select-item" type="checkbox" /></td>*@
                <td><input type="checkbox" value="@v.USER_ID" id="UserChk" name="UserChk" class="innerCheck" /></td>
                <td>@v.USER_DESC</td>
                <td>@v.USER_ID</td>
                <td>@v.USER_NAME </td>
                <td>@v.EMAIL</td>
                <td>@v.PHONE</td>
                <td>@v.EMP_ID</td>
                <td>@v.BRANCH_NAME</td>
                <td>@v.DEPT_NAME</td>
                <td>@v.AGENT_ID</td>
                <td>@v.AGENT_NAME</td>
                <td>@v.INS_BY</td>
                <td>@v.INS_DATE</td>
                <td>@v.UPD_BY</td>
                <td>@v.UPD_DATE</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No record found.</p>
}
<script type="text/javascript">
    $(document).ready(function () {
        //ERPApplication.makePagination("tb-accreq");
        ApplicationCommon.makePagination('tb-accuserauth');
        $("#UserChkAll").click(function () {
            var checkAll = $("#UserChkAll").prop('checked');
            if (checkAll) {
                $(".innerCheck").prop("checked", true);
            } else {
                $(".innerCheck").prop("checked", false);
            }
        });
        $(".innerCheck").click(function () {
            if ($(".innerCheck").length == $(".innerCheck:checked").length) {
                $("#UserChkAll").prop("checked", true);
            } else {
                $("#UserChkAll").prop("checked", false);
            }

        });
    });

</script>
<style>
    #tb-InventoryProduct {
        width: 100% !important;
    }
</style>
