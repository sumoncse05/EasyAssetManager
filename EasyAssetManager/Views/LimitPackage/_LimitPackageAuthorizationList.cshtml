@model IEnumerable<EasyAssetManagerCore.Models.EntityModel.LimitPackage>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover dataTables-example table-responsive" id="tb-limitPackageAuthorize" width="100%">
        <thead>
            <tr>
                <th class="removeSorting"><input type="checkbox" id="LimitChkAll" name="LimitChkAll" /></th>
                <th>Package ID</th>
                <th>Package Name</th>
                <th>Remarks</th>
                <th>Created By</th>
                <th>Created Date</th>
                <th>Updated By</th>
                <th>Updated Date</th>
                <th>Authorized By</th>
                <th>Authorized Date</th>
                <th>Action</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
            <tr>
                @if (string.IsNullOrEmpty(v.auth_date))
                {
                    <td>
                        <input type="checkbox" id="LimitChk" name="LimitChk" class="innerCheck" />
                    </td>
                }
                else
                {
                    <td></td>
                }
                <td>@v.limit_id</td>
                <td>@v.limit_desc</td>
                <td>@v.remarks</td>
                <td>@v.ins_by</td>
                <td>@v.ins_date</td>
                <td>@v.upd_by </td>
                <td>@v.upd_date</td>
                <td>@v.auth_by</td>
                <td>@v.auth_date</td>
                <td>

                    <button type="button" class="btn btn-success gridButton" onclick="classLimitPackageAuthorize.viewdata('@v.limit_id');" data-id="@v.limit_id">
                        <i class="fa fa-eye"></i>
                    </button>
                </td>
                @if (string.IsNullOrEmpty(v.auth_date))
                {
                    <td>
                        <button type="button" class="btn btn-danger gridButton" onclick="classLimitPackageAuthorize.deletedata('@v.limit_id');" data-id="@v.limit_id">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                }
                else
                {
                    <td></td>
                }

            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No record found.</p>
}

<script type="text/javascript">
    $(document).ready(function () {
        ApplicationCommon.makePagination('tb-limitPackageAuthorize');
        $("#LimitChkAll").click(function () {
            var checkAll = $("#LimitChkAll").prop('checked');
            if (checkAll) {
                $(".innerCheck").prop("checked", true);
            } else {
                $(".innerCheck").prop("checked", false);
            }
        });
        $(".innerCheck").click(function () {
            if ($(".innerCheck").length == $(".innerCheck:checked").length) {
                $("#LimitChkAll").prop("checked", true);
            } else {
                $("#LimitChkAll").prop("checked", false);
            }

        });
    });

</script>