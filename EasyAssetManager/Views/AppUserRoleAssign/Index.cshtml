
@{
    ViewData["Title"] = "Assign Role to User";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">

            <div class="ibox" id="divsidebarCollapse">
                <div class="ibox-title">
                    <h5>Assign Role to User</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up" id="sidebarCollapse"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" id="sidebarContent">
                    <form id="stepProcess" action="#" class="wizard-big">
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group row">
                                        <div class="col-xl-2"></div>
                                        <div class="col-xl-2">
                                            <label class="col-form-label">Select User</label>
                                        </div>
                                        <div class="col-xl-3">
                                            <select id="sc_user_name" name="sc_user_name" class="form-control form-element"></select>
                                        </div>
                                        <div class="col-xl-5"></div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-xl-2"></div>
                                        <div class="col-xl-2">
                                            <label class="col-form-label">User Name</label>
                                        </div>
                                        <div class="col-xl-3">
                                            <input type="text" id="user_name" name="user_name" class="form-control form-element" disabled="disabled"/>
                                        </div>
                                        <div class="col-xl-5"></div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox " id="iboxTbl">
                <div class="ibox-title">
                    <div class="form-group row">
                        <div class="col-lg-5">
                            <h5>Assigned Role</h5>
                        </div>
                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-5">
                            <h5>Avaiavle Role</h5>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-5">
                        <div id="acc_availablerole"></div>
                    </div>
                    <div class="col-lg-1" style="margin-top:150px">
                        <div class="btn-group-vertical">
                            <button type="button" class="btn btn-info" id="assignRole">></button>
                            <button type="button" class="btn btn-info" id="removeRole"><</button>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div id="acc_assignrole"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">


        var classUserListSearch = function () {
            var init = function () {
                eventInitializer();

            };
            var eventInitializer = function () {
                $('#sc_user_name').change(searchInitiate);
                $('#assignRole').click(addListItem);
                $('#removeRole').click(removeListItem);
                combo.getUserList("sc_user_name", '/Common/GetUserListCombo', true);
                searchInitiate();
            };
            var searchInitiate = function () {
                var user_id = $("#sc_user_name option:selected").text();
                $('#user_name').val($("#sc_user_name option:selected").val());
                $('#acc_assignrole').empty();
                $('#acc_availablerole').empty();
                $('#acc_availablerole').load('/AppUserRoleAssign/FreeRoleList?user_id=' + user_id);
                $('#acc_assignrole').load('/AppUserRoleAssign/AssignedRoleList?user_id=' + user_id);
            };

            var addListItem = function () {

                if ($("#sc_user_name").val() == "") {
                    ApplicationCommon.showNotification("2", "Select a User to Modify");
                    $("#sc_user_name").focus();
                }
                else {
                    $('#tb-accfreerole').find('tr').each(function (index) {
                        if (index > 0) {
                            var row = $(this);
                            if (row.find('td input[type="checkbox"]').is(':checked')) {
                                var role_id = row.find('td:eq(1)').text();
                                var user_id = $("#sc_user_name option:selected").text();
                                addRemoveRole(this, user_id, role_id, 'A');                                
                            }
                        }
                    });
                }
                return false;
            };
            var removeListItem = function () {
                $('#tb-accassrole').find('tr').each(function (index) {
                    if (index > 0) {
                        var row = $(this);
                        if (row.find('td input[type="checkbox"]').is(':checked')) {
                            var role_id = row.find('td:eq(1)').text();
                            var user_id = $("#sc_user_name option:selected").text();
                            addRemoveRole(this, user_id, role_id, 'R');
                        }
                    }
                });
                return false;
            };
            function addRemoveRole(row, user_id, role_id, trans_type) {               
                var formData = new FormData();
                formData.append("user_id", user_id);
                formData.append("role_id", role_id);
                formData.append("trans_type", trans_type);
                var url = '/AppUserRoleAssign/AddRemoveRole';
                ApplicationCommon.request(url, 'POST', formData, false, true, false, function (res) {
                    ApplicationCommon.showNotification(res.messageType, res.messageString);
                    if (res.messageType == 1) {
                        if (trans_type == 'A') {
                            $('#tb-accassrole').append(row);
                            $('#tb-accfreerole tr').remove(row);
                        }
                        else {
                            $('#tb-accfreerole').append(row);
                            $('#tb-accassrole tr').remove(row);
                        }
                    }
                });
            }
            return { init: init };
        }();

        classUserListSearch.init();

    </script>
}