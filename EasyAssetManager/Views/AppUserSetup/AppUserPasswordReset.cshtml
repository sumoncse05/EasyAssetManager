
@{
    ViewData["Title"] = "Reset Password";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">

            <div class="ibox" id="divsidebarCollapse">
                <div class="ibox-title">
                    <h5>Search Parameters</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up" id="sidebarCollapse"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" id="sidebarContent">
                    <form id="stepProcess" action="#" class="wizard-big">
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group row">
                                        <div class="col-xl-2"></div>
                                        <div class="col-xl-2">
                                            <label class="col-form-label">User Type</label>
                                        </div>
                                        <div class="col-xl-3">
                                            <select id="user_type" name="user_type" class="form-control form-element"></select>
                                        </div>
                                        <div class="col-xl-5"></div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-xl-2"></div>
                                        <div class="col-xl-2">
                                            <label class="col-form-label">User ID</label>
                                        </div>
                                        <div class="col-xl-3">
                                            <input type="text" id="user_id" name="user_id" class="form-control form-element" />
                                        </div>
                                        <div class="col-xl-5"></div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-xl-2"></div>
                                        <div class="col-xl-2">
                                            <label class="col-form-label">User Name</label>
                                        </div>
                                        <div class="col-xl-3">
                                            <input type="text" id="user_name" name="user_name" class="form-control form-element" />
                                        </div>
                                        <div class="col-xl-5"></div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-xl-5"></div>
                                        <div class="col-xl-2">
                                            <button type="button" class="btn btn-primary" id="search">Search</button>
                                        </div>
                                        <div class="col-xl-3"></div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>  Existing User List</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div id="div_activeUser"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/ApplicationTheme/lib/sweetalert/dist/sweetalert.css" />
    </environment>
}
@section scripts{
    <script src="~/ApplicationTheme/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">


        var classResetPassword = function ()
        {
            var init = function ()
            {
                eventInitializer();
            };
            var eventInitializer = function ()
            {
                combo.getUserTypeList("user_type", '/Common/GetUserTypeListCombo', true);
                $('#search').click(searchInitiate);
            };
            var searchInitiate = function ()
            {

                var user_type = $('#user_type').val();
                var user_id = $('#user_id').val();
                var user_name = $('#user_name').val().replace(/ /g, "+");
                $('#div_activeUser').empty();
                var url = '/AppUserSetup/GetActiveUsers';
                $('#div_activeUser').load(url + '?user_id=' + user_id + '&&user_name=' + user_name + '&&user_type=' + user_type);

            };
            
            return { init: init,searchInitiate:searchInitiate};
        }();

        classResetPassword.init();

    </script>
}

