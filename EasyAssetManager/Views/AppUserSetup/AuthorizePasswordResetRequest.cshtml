@model IEnumerable<EasyAssetManagerCore.Models.EntityModel.SettingsUsers>
@{
    ViewData["Title"] = "Authorize Password Reset Request";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox " id="iboxTbl">
                <div class="ibox-title">
                    <h5>Authorize Password Reset Request</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up" id="iboxTblImg"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" id="iboxContent">
                    <div id="div_resetPasswordRequest">

                    </div>
                    <div class="form-group hr-line-dashed"> </div>
                    <div style="text-align:left" id="page1">
                        <button type="button" class="btn btn-default" id="btnRefresh">Refresh</button>
                        <button type="button" class="btn btn-primary" id="btnAuthorize">Authorize</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        var classAuthorizeResetPassword = function ()
        {
            var init = function ()
            {
                eventInitializer();
            };
            var eventInitializer = function ()
            {
        searchInitiate();
                $('#btnAuthorize').click(authorise);
                $('#btnRefresh').click(refresh);

            };
        var searchInitiate = function () {
                $('#div_resetPasswordRequest').empty();
                var url = '/AppUserSetup/AuthorizePasswordResetRequestList';
                $('#div_resetPasswordRequest').load(url);
            };
            var authorise = function ()
            {
                var users = getAllData();
                if (users.length < 1)
                {
                    ApplicationCommon.showNotification("2", "Select atleast one User to authorize.");
                } else
                {
                    var url = '/AppUserSetup/AuthorizePasswordResetRequest';
                    ApplicationCommon.post(url, { "users": users }, function (res)
                    {
                        ApplicationCommon.showNotification(res.messageType, res.messageString);
                        if (res.messageType == 1)
                        {
        searchInitiate();
                        }
                    });
                }
            };
            var refresh = function ()
            {
        searchInitiate();
            };
            function getAllData()
            {
                var users = [];
                $('#tb-resetPasswordRequest').find('tr').each(function (index)
                {
                    if (index > 0) {
                        var row = $(this);
                        if (row.find('input[type="checkbox"]').is(':checked')) {
                            var user = new Object();
                            user.rst_slno = row.find('td:eq(1)').text();
                            user.user_id = row.find('td:eq(3)').text();
                            user.reset_code = row.find('td:eq(4)').text();
                            users.push(user);
                        }
                    }
                });
                return users;
            };

            return { init: init};
        }();

        classAuthorizeResetPassword.init();

    </script>
}

